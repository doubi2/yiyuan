.inquiry{
    width: 100%;
}
.inquiry_main{
    width: 96%;
    margin-left: 4%;
}
.doctor_info{
    border-bottom: solid #F4F4F4 1px;
    display: flex;
    flex-direction: row;
    margin-top: 40rpx;
    height: 210rpx;
}
.doctor_info image{
    width: 90rpx;
    height: 90rpx;
    border-radius: 45rpx;
}
.doctor{
    margin-left: 30rpx;
}
.doctor_name{
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    align-items: center;
}
.doctor_name :first-of-type{
    font-size: 30rpx;
    font-weight: 600;
    color: #333333;
}
.doctor_name :nth-of-type(2){
    font-size: 27rpx;
    margin-left: 18rpx;
    color: #676767;
}
.hint{
    width:96%;
    height:120rpx;
    font-size:28rpx;
    border-radius:10rpx;
    background-color:#F4F4F4;
    display:flex;
    align-items:center;
    color:#676767;
    margin-top:18rpx;
    line-height:45rpx;
    padding-left:13rpx;
}
.section{
    width: 100%;
    margin-top: 20rpx;
    border-bottom: solid #F4F4F4 1px;
}
.placeholderclass{
    font-size: 30rpx;
    color: #cccccc;
}
.uploadimage{
    margin-top: 40rpx;
}
.uploadimage_main{
    display: flex;
    flex-direction: row;
    align-items: center;
    color: #9A9A9A;
}
.upload_hint{

}
.upload_icon{
    width: 220rpx;
    height: 220rpx;
    background-color: #F4F4F4;
    display: flex;
    justify-content: center;
    flex-direction: column;
    align-items: center;
}
.upload_icon :first-of-type{
    display: flex;
    justify-content: center;
    align-items: center;
    width: 60rpx;
    height: 60rpx;
    border-radius: 30rpx;
    background-color: #ffffff;
    border: solid #A5A5A5 1px;
    font-weight: 100;
    font-size: 50rpx;
    color: #A5A5A5;
}
.upload_icon :nth-of-type(2){
    margin-top: 18rpx;
    font-size: 25rpx;
}
.introduce{
    font-size: 26rpx;
    margin-left: 30rpx;
}
.introduce :first-of-type{
    margin-bottom: 10rpx;
}